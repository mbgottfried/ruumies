<% if user_signed_in? %>
	<% if current_user.house %>
	  <%= render 'layouts/existinguser' %>
	<% else %>
	  <%= render 'layouts/newuser' %>
	<% end %>
<% else %>
<div class="jumbotron">
	<div class="container">
		<h1>Roommate issues, solved.</h1>
		<h4>Ruumies is the smart way to manage your humble abode.<br />
			Stay on top of bills, groceries, tasks and more. </h4>
			<div class="home-buttons">
	         	<%= link_to "Get Started", new_user_registration_path, class: "btn btn-default btn-lg" %>
	         	<%= link_to "Learn More", "#", class: "btn btn-primary btn-lg" %>
	        </div>
	</div>
</div>

<div class="pane-white home-pane">
	<div class="container">
		<div class="col-md-3 center">
			<%= image_tag ("rent-small.png") %>
			<h2>Rent & Bills</h2>
		</div>
		<div class="col-md-3 center">
			<%= image_tag ("lists-small.png") %>
			<h2>To-Do Lists</h2>
		</div>
		<div class="col-md-3 center">
			<%= image_tag ("messages-small.png") %>
			<h2>Messages</h2>
		</div>
		<div class="col-md-3 center">
			<%= image_tag ("groceries-small.png") %>
			<h2>Groceries</h2>
		</div>
	</div>
</div>
<div class="pane-gray home-pane">
	Second Pane.
</div>
<div class="pane-white home-pane">
	Third Pane.
</div>
<% end %>

<%= render 'layouts/footer' %>